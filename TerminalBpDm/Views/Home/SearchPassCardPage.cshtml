@{
    ViewBag.Title = "Search pass card";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Ручной ввод</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            background: linear-gradient(to bottom, #003366, #004080);
            font-family: Arial, sans-serif;
            color: white;
            font-size: 22px;
            overflow: hidden;
        }

        .container {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        #inputWrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 30px;
        }

        #inputField {
            font-size: 30px;
            padding: 16px;
            width: 700px;
            text-align: center;
            border-radius: 10px;
            border: none;
            background-color: rgba(255, 255, 255, 0.15);
            color: white;
        }

        #backspaceButton {
            margin-left: 15px;
            padding: 16px 20px;
            font-size: 26px;
            background-color: #cc3333;
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
        }

        .keyboard-wrapper {
            width: 800px;
            margin: 0 auto;
        }

        .keyboard-row {
            display: flex;
            justify-content: center;
            margin: 8px 0;
        }

        .keyboard-button {
            padding: 20px 25px;
            margin: 5px;
            font-size: 22px;
            border-radius: 8px;
            border: none;
            background-color: #0066cc;
            color: white;
            cursor: pointer;
            min-width: 70px;
            text-align: center;
        }

            .keyboard-button.space {
                min-width: 300px;
            }

            .keyboard-button.wide {
                min-width: 130px;
            }

            .keyboard-button.small-text {
                font-size: 16px;
            }

        .action-buttons {
            margin-top: 30px;
        }

            .action-buttons button {
                padding: 16px 40px;
                font-size: 22px;
                border-radius: 10px;
                border: none;
                background-color: #00cc66;
                color: white;
                cursor: pointer;
            }

        .back-button {
            position: absolute;
            bottom: 20px;
            left: 20px;
            padding: 12px 24px;
            font-size: 18px;
            background-color: #0059b3;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
        }

        .clock {
            position: absolute;
            bottom: 20px;
            right: 30px;
            font-size: 18px;
            opacity: 0.8;
        }
    </style>
</head>
<body>
    <div class="container">
        <div id="inputWrapper">
            <input type="text" id="inputField" readonly />
            <button id="backspaceButton" onclick="handleBackspace()">⌫</button>
        </div>

        <div class="keyboard-wrapper" id="keyboardContainer"></div>

        <div class="action-buttons">
            <button onclick="alert('Поиск выполнен')">🔍 Поиск</button>
        </div>
    </div>

    <button class="back-button" onclick="window.location.href='@Url.Action("Index", "Home")'">⬅ Назад</button>
    <div class="clock" id="clock"></div>

    <script>
        let isLetters = false;
        const inputField = document.getElementById("inputField");
        const keyboardContainer = document.getElementById("keyboardContainer");

        const numberLayout = [
            ["1", "2", "3"],
            ["4", "5", "6"],
            ["7", "8", "9"],
            ["ABC", "0"]
        ];

        const letterLayout = [
            ["Q", "W", "E", "R", "T", "Y", "U", "I", "O", "P"],
            ["A", "S", "D", "F", "G", "H", "J", "K", "L"],
            ["Z", "X", "C", "V", "B", "N", "M"],
            ["123", "space"]
        ];

        function handleBackspace() {
            inputField.value = inputField.value.slice(0, -1);
        }

        function renderKeyboard() {
            keyboardContainer.innerHTML = "";
            const layout = isLetters ? letterLayout : numberLayout;
            layout.forEach(row => {
                const rowDiv = document.createElement("div");
                rowDiv.className = "keyboard-row";
                row.forEach(key => {
                    const button = document.createElement("button");
                    button.className = "keyboard-button";

                    if (key === "space") {
                        button.classList.add("space");
                        button.innerHTML = "␣";
                        button.onclick = () => inputField.value += " ";
                    } else if (key === "0") {
                        button.classList.add("wide");
                        button.innerHTML = "0";
                        button.onclick = () => inputField.value += "0";
                    } else if (key === "ABC" || key === "123") {
                        button.classList.add("small-text");
                        button.innerHTML = key;
                        button.onclick = () => {
                            isLetters = !isLetters;
                            renderKeyboard();
                        };
                    } else {
                        button.innerHTML = key;
                        button.onclick = () => inputField.value += key;
                    }

                    rowDiv.appendChild(button);
                });
                keyboardContainer.appendChild(rowDiv);
            });
        }

        renderKeyboard();

        // Часы
        function updateClock() {
            const now = new Date();
            const date = now.toLocaleDateString('ru-RU');
            const time = now.toLocaleTimeString('ru-RU', { hour12: false });
            document.getElementById('clock').innerText = `${date} ${time}`;
        }

        setInterval(updateClock, 1000);
        updateClock();
    </script>
</body>
</html>
