@using System.Globalization
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <title>Выдача пропуска</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden;
            background: linear-gradient(to bottom, #003366, #004080);
            color: white;
            font-family: Arial, sans-serif;
            font-size: 24px;
        }

        .container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
            text-align: center;
        }

        h2 {
            margin-bottom: 40px;
        }

        .spinner {
            border: 10px solid #004080;
            border-top: 10px solid #00cc66;
            border-radius: 50%;
            width: 100px;
            height: 100px;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .clock {
            position: absolute;
            bottom: 20px;
            right: 30px;
            font-size: 18px;
            opacity: 0.8;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>@TerminalBpDm.Resources.Messages.PleaseWait</h2>
        <div class="spinner"></div>
    </div>

    <div class="clock" id="clock"></div>

    <script>
        function updateClock() {
            const now = new Date();
            const date = now.toLocaleDateString('ru-RU');
            const time = now.toLocaleTimeString('ru-RU', { hour12: false });
            document.getElementById('clock').innerText = `${date} ${time}`;
        }

        setInterval(updateClock, 1000);
        updateClock();
    </script>
</body>
</html>
