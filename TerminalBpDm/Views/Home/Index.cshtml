@using System.Globalization
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <title>Терминал выдачи пропусков</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden;
            background: linear-gradient(to bottom, #003366, #004080);
            color: white;
            font-family: Arial, sans-serif;
            font-size: 22px;
        }

        .container {
            position: relative;
            height: 100%;
            padding: 40px;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
        }

        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        h1 {
            font-size: 34px;
            margin-bottom: 20px;
            text-align: center;
        }

        .text-block {
            background-color: rgba(0, 0, 0, 0.3);
            padding: 30px;
            border-radius: 10px;
            white-space: pre-wrap;
            line-height: 1.6;
            overflow: auto;
        }

        .bottom-panel {
            position: absolute;
            bottom: 40px;
            left: 0;
            right: 0;
            text-align: center;
        }

        .start-button {
            background-color: #00cc66;
            color: white;
            font-size: 24px;
            padding: 20px 50px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            margin-bottom: 20px;
        }

        .lang-buttons button {
            background-color: #0059b3;
            color: white;
            border: none;
            padding: 12px 24px;
            margin: 0 12px;
            font-size: 18px;
            border-radius: 5px;
            cursor: pointer;
        }

        .clock {
            position: absolute;
            bottom: 20px;
            right: 30px;
            font-size: 18px;
            color: white;
            font-family: Arial, sans-serif;
            opacity: 0.8;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="main-content">
            <h1>@TerminalBpDm.Resources.Messages.Terminal<br />@TerminalBpDm.Resources.Messages.DM</h1>

            <div class="text-block">
                @TerminalBpDm.Resources.Messages.Part1

                @TerminalBpDm.Resources.Messages.Part2

                @TerminalBpDm.Resources.Messages.Part3

                @TerminalBpDm.Resources.Messages.Part4
                @TerminalBpDm.Resources.Messages.Part5
            </div>
        </div>

        <div class="bottom-panel">
            <form action="@Url.Action("SearchPassCardPage")">
                <button type="submit" class="start-button">
                    @TerminalBpDm.Resources.Messages.Start
                </button>
            </form>

            <div class="lang-buttons" style="margin-top: 25px;">
                <button onclick="location.href='@Url.Action("SetLanguage", new { lang = "kk" })'">Kaz</button>
                <button onclick="location.href='@Url.Action("SetLanguage", new { lang = "ru" })'">Рус</button>
                <button onclick="location.href='@Url.Action("SetLanguage", new { lang = "en" })'">Eng</button>
            </div>
        </div>
    </div>
    <div class="clock" id="clock">
        <!-- Текущее время появится здесь -->
    </div>
</body>
</html>

<script>
    function updateClock() {
        const now = new Date();
        const date = now.toLocaleDateString('ru-RU');
        const time = now.toLocaleTimeString('ru-RU', { hour12: false });
        document.getElementById('clock').innerText = `${date} ${time}`;
    }

    setInterval(updateClock, 1000);
    updateClock(); // запустить сразу при загрузке
</script>